<html>
  <head>
    <title>Articles</title>
  </head>
  <body>
    <h1>Articles</h1>
    <ul>
      <% articles.each do |article| %>
        <li>
          <a href="/articles/<%= article.id %>">
          <%= article.title %>
          </a>
        </li>
      <% end %>
    </ul>
    <hr>
    <a href="/articles/new">Create new article</a>
  </body>
</html>
