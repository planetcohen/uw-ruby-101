<%
if action == :new
  cancel_url = "/articles"
  button_label = "Create new article"
else
  cancel_url = "/articles/#{article.id}"
  button_label = "Update article"
end
%>
<ul>
  <li>
    <label for="title">title</label><br>
    <input type="text" name="title" value="<%= article.title %>">
  </li>
  <li>
    <label for="abstract">abstract</label><br>
    <input type="text" name="abstract" value="<%= article.abstract %>">
  </li>
  <li>
    <label for="body">body</label><br>
    <input type="text" name="body" value="<%= article.body %>">
  </li>
  <li>
    <input type="submit" value="<%= button_label %>">
    <a href="<%= cancel_url %>">Cancel</a>
  </li>
</ul>
